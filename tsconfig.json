{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components/*"],
      "@pages": ["./src/pages/*"],
      "@styles": ["./src/styles/*"],
      "@utils": ["./src/utils/*"],
      "@hooks": ["./src/hooks/*"],
      "@images": ["./src/images/*"],
      "@types": ["./src/types/*"]
    }
  },
  "exclude": ["node_modules", "public", ".cache"]
}
